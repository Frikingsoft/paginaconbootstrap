<div class="container-fluid mt-5 ms-5">
    <div class="row justify-content-center">
        <div class="col-5 formulario">
            <h2 class="text-center">Login</h2>
            <form id="formLogin">
                <div class="mb-3">
                    <label for="nombre" class="form-label">Usuario</label>
                    <input type="text" class="form-control" id="usuario" placeholder="Ingrese su nombre">
                </div>
               
                <div class="mb-3">
                    <label for="contraseña" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="contra" placeholder="Ingrese su contraseña">
                </div>
                <div class="mt-5 d-flex justify-content-center">
                    <button type="submit" class="boton_enviar" onclick="enviar_login()">Enviar</button>
                </div>
            </form>
        </div>
    </div>
</div>
